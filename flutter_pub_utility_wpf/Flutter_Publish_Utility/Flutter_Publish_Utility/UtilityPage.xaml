<Page x:Class="Flutter_Publish_Utility.UtilityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Flutter_Publish_Utility"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
     >

    <Border BorderBrush="Black" BorderThickness="5" Margin="15,15,15,15">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock   Text="Flutter Utility Tool" 
              HorizontalAlignment="Center" VerticalAlignment="Center"
                 FontSize="30" FontWeight="Bold" FontFamily="Lucida Bright" />
            <TabControl Grid.Row="1">
                <TabItem Header="Pub Publish" Width="150" x:Name="apk_tab"/>
                <TabItem Header="Generate APK" Width="150"/>
                <TabItem Header="Screen Compare" Width="150"/>
                <TabItem Header="Web Host" Width="150"/>
                <TabItem Header="Generate IOS" Width="150"/>
            </TabControl>
        </Grid>
    </Border>
</Page>
